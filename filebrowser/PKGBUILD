pkgname=filebrowser-bin
pkgver=2.4.0
pkgrel=1
pkgdesc="Web File Manager which can be used as a middleware or standalone app."
arch=('x86_64')
url="https://github.com/filebrowser/filebrowser"
license=('Apache')
provides=("filebrowser")
conflicts=("filebrowser")

source=('filebrowser@.service')
source_x86_64=(linux-amd64-filebrowser-$pkgver.tar.gz::https://github.com/filebrowser/filebrowser/releases/download/v$pkgver/linux-amd64-filebrowser.tar.gz)
source_armv5=(linux-armv5-filebrowser-$pkgver.tar.gz::https://github.com/filebrowser/filebrowser/releases/download/v$pkgver/linux-armv5-filebrowser.tar.gz)

sha256sums=('ed81a3df449601ef18c7e255bdace337530145a2981507e01b7c68fc008be1da')
sha256sums_x86_64=('ae7014f94a03d5a07c896ec7e7cbc3caf88e92ffca9d18fc1b5f41ed406c5313')
sha256sums_armv5=('5e196445bda221090f52d63f1f8bb04f8b6f94606f58c8c86ec3a1d2f4da81c0')

package() {
    install -Dm644 filebrowser@.service ${pkgdir}/usr/lib/systemd/system/filebrowser@.service
    install -Dm755 $srcdir/filebrowser ${pkgdir}/usr/bin/filebrowser
}